<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/messgae_profile_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/messgae_profile_img"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/messgae_profile_img"
        android:background="@drawable/message_text_background"
        android:padding="12dp"
        android:text="TextView"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/message2_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_alignBottom="@id/messgae_profile_img"
        android:layout_marginBottom="10dp"
        android:background="@drawable/my_message_background"
        android:padding="12dp"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message_textview"
        android:layout_below="@+id/message_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/messgae_profile_img"
        android:padding="0dp"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/message_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message2_textview"
        android:layout_below="@+id/message2_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/messgae_profile_img"
        android:padding="0dp"
        android:scaleType="center" />
</RelativeLayout>
